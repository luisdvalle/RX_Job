<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.status_rx_job').css({'color': '#FFFFFF'});
            var children = $('.row_rx_job').children('.status_rx_job');
            children.each(function (i, val) {
                var text = $(this).text();
                if (text === 'Complete')
                    $(this).css({ 'background': '#008000' });
                else if (text === 'In Progress')
                    $(this).css({ 'background': '#808000' });
                else if (text === 'Delayed')
                    $(this).css({ 'background': '#FF0000' });
                else if (text === 'Not Started')
                    $(this).css({ 'background': '#808080' });
            });
        });
    </script>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body onload="defineBackground()">
    <div class="container-fluid">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Coding Challenge - Willow</a>
                </div>
                <ul class="nav navbar-nav">
                    <li><a asp-action="Index" asp-controller="Home">Home</a></li>
                </ul>
            </div>
        </nav>
        <div class="panel panel-default">
            <div class="panel-body">
                @RenderBody()
            </div>
            <footer class="panel-footer">
                <p>Luis Del Valle. <a href="mailto:luis@luis-delvalle.com">Contact</a></p>
            </footer>
        </div>
    </div>
</body>
</html>